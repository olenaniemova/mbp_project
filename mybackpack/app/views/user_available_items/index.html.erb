<p id="notice"><%= notice %></p>

<!-- <h1>User Available Items</h1> -->
<h1 style="margin-bottom: 30px">Мої речі</h1>

<%= link_to 'Додати річ', new_user_available_item_path %>
<p style="margin-bottom: 30px"></p>

<% @categories.each do |category| %>
  <p style="font-size: 16px; font-weight: bold"><%= category %></p>
  <table>
    <thead>
      <tr>
        <th style="width: 250px">Назва</th>
        <th style="padding: 4px">Кількість</th>
        <th style="padding: 4px">Вага, кг</th>
        <th style="padding: 4px">Індивідуальність</th>
        <th colspan="3" style="padding: 4px"></th>
      </tr>
    </thead>

    <tbody>
      <% UserAvailableItem.category_items(@user_available_items, category).each do |i| %>
        <tr>
          <td><%= i.item.title %></td>
          <td><%= i.count %></td>
          <td><%= i.item.weight %></td>
          <td><%= i.item.individualy %></td>
          <td><%= link_to 'Детальніше', item_path(i.item) %></td>
          <td><%= link_to 'Редагувати', edit_user_available_item_path(i) %></td>
          <td><%= link_to 'Видалити', i, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>

<br>
