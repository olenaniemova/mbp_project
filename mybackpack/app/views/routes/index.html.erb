<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Duration</th>
      <th>Chain</th>
      <th>User</th>
      <th>Complexity</th>
      <th>Publication</th>
      <th>Settlement dep</th>
      <th>Settlement arr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.title %></td>
        <td><%= route.description %></td>
        <td><%= route.start_date %></td>
        <td><%= route.end_date %></td>
        <td><%= route.duration %></td>
        <td><%= route.chain_id %></td>
        <td><%= route.user_id %></td>
        <td><%= route.complexity_id %></td>
        <td><%= route.publication %></td>
        <td><%= route.settlement_dep %></td>
        <td><%= route.settlement_arr %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

