<h2><%= @route.title %></h2>

<div style="margin-bottom: 15px;">
  <%= @route.description %>
</div>

<div>
  <p><strong>Складність:</strong> <%= @route.complexity.title %></p>
</div>

<div>
  <p>
    <strong>З</strong> <%= @route.start_date.strftime("%d %b %Y") %>
    <strong>до</strong> <%= @route.end_date.strftime("%d %b %Y")  %>,
    <strong>тривалість</strong> <%= @route.duration %> дні
  </p>
</div>

<div>
  <p><strong>Гірський хребет:</strong> <%= @route.chain.title %></p>
</div>

<!--<p>
  <strong>Author:</strong>
  <%= @route.user_id %>
</p>

