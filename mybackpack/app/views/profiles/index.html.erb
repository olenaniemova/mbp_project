<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Birthday</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>About me</th>
      <th>Hiking count</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Bpws</th>
      <th>Bpvs</th>
      <th>Bpww</th>
      <th>Bpvw</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.birthday %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.phone %></td>
        <td><%= profile.about_me %></td>
        <td><%= profile.hiking_count %></td>
        <td><%= profile.weight %></td>
        <td><%= profile.height %></td>
        <td><%= profile.bpws %></td>
        <td><%= profile.bpvs %></td>
        <td><%= profile.bpww %></td>
        <td><%= profile.bpvw %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

