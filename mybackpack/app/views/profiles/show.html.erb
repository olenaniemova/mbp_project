<p id="notice"><%= notice %></p>

<div>
  <p><%= link_to 'User available items', user_available_items_path %></p>
  <p><%= link_to 'User favorite foods', user_favorite_foods_path %></p>
</div>

<p>
  <strong>First name:</strong>
  <%= @profile.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @profile.last_name %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @profile.birthday.strftime("%d %b %Y") %>
</p>

<p>
  <strong>Gender:</strong>
  <% if @profile.gender == 0 %>
    Чоловік
  <% else %>
    Жінка
  <% end %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @profile.phone %>
</p>

<p>
  <strong>About me:</strong>
  <%= @profile.about_me %>
</p>

<p>
  <strong>Hiking count:</strong>
  <%= @profile.hiking_count %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @profile.weight %>
  кг
</p>

<p>
  <strong>Height:</strong>
  <%= @profile.height %>
  см
</p>

<p>
  <strong>Backpack weight summer:</strong>
  <%= @profile.bpws %>
  кг
</p>

<p>
  <strong>Backpack volume summer:</strong>
  <%= @profile.bpvs %>
  кг
</p>

<p>
  <strong>Backpack weight winter:</strong>
  <%= @profile.bpww %>
  кг
</p>

<p>
  <strong>Backpack volume winter:</strong>
  <%= @profile.bpvw %>
  кг
</p>

<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>

<div>
  <strong>Articles: </strong>
  <% @user.articles.each do |article| %>
    <p>
      <%= link_to article.title, article_path(article) %>
    </p>
  <% end %>
</div>

<div>
  <strong>Routes: </strong>
  <% @user.routes.each do |route| %>
    <p>
      <%= link_to route.title, route_path(route) %>
    </p>
  <% end %>
</div>
