<p id="notice"><%= notice %></p>

<h1>Weather Types</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weather_types.each do |weather_type| %>
      <tr>
        <td><%= weather_type.title %></td>
        <td><%= link_to 'Show', weather_type %></td>
        <td><%= link_to 'Edit', edit_weather_type_path(weather_type) %></td>
        <td><%= link_to 'Destroy', weather_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

