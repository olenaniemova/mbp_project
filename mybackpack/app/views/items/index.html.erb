<%= link_to 'New Item', new_item_path %>

  <div>
    <% @items.each do |item| %>
      <div>
        <h4><%= item.title %></h4>
        <p><%= truncate(item.description, :length => 200, :separator => ' ')%> <%= link_to 'Read more', item %></p>
        <p>Producer: <%= item.producer.title %> | <%= link_to 'Buy', item.source %></p>
      </div>
    <% end %>
  </div>
