<div class="container" style="width: 500px; text-align: center; ">
<h2>Вхід</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, value: "Email", id: 'Email', class: 'text-left' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: 'Email' %>
  </div>

  <div class="form-group">
    <%= f.label :password, value: "Пароль", id: 'password', class: 'text-left' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', id: 'password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Увійти", class: 'btn btn-primary btn-raised'  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
