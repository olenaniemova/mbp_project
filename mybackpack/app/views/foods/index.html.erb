<p id="notice"><%= notice %></p>

<h1>Foods</h1>

<div>
  <p><%= link_to 'Food Types', food_types_path %> |
  <%= link_to 'Food Categories', food_categories_path %> |
  <%= link_to 'Producer', producers_path %> </p>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.title %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food', new_food_path %>
