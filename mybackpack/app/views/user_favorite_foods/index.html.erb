<p id="notice"><%= notice %></p>

<h1>User Favorite Foods</h1>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Meal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_favorite_foods.each do |user_favorite_food| %>
      <tr>
        <td><%= user_favorite_food.food.title %></td>
        <td><%= user_favorite_food.meal.title %></td>
        <td><%= link_to 'Show', user_favorite_food %></td>
        <td><%= link_to 'Edit', edit_user_favorite_food_path(user_favorite_food) %></td>
        <td><%= link_to 'Destroy', user_favorite_food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Favorite Food', new_user_favorite_food_path %>
