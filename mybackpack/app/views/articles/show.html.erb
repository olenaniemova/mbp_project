<!-- <p id="notice"><%= notice %></p> -->

  <h2><%= @article.title %></h2>

  <div>
    <%= @article.text %>
  </div>

  <p>
    <strong>Категорії: </strong>
      <% @article.article_category.each do |category| %>
      <%= link_to category.title, article_category_path(category) %>
      <% end %>
  </p>

  <p>
    <strong>Джерело:</strong>
    <%= link_to @article.source, @article.source %>
  </p>

  <p>Автор:
    <%= @author.first_name %>
    <%= @author.last_name %>
  </p>

  <% if current_user.id == @author.user_id %>
    <p>
      <%= link_to 'Редагувати', edit_article_path(@article) %> |
      <%= link_to 'Видалити', @article, method: :delete, data: { confirm: 'Ви впевнені?' } %>
    </p>
  <% end %>
  <p><%= link_to 'Назад', articles_path %></p>
